{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["./shared/*"],
      "@controllers/*": ["./controllers/*"],
      "@services/*": ["./services/*"],
      "@repositories/*": ["./repositories/*"],
      "@utils/*": ["./utils/*"],
      "@types/*": ["./types/*"],
      "@entities/*": ["./entities/*"],
      "@dtos/*": ["./dtos/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@mappers/*": ["./mappers/*"],
      "@constants/*": ["./constants/*"],
      "@exceptions/*": ["./exceptions/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

